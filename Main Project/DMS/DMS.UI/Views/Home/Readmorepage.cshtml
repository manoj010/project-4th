@model List<DMS.DAL.DatabaseContext.destinationn>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "readmore";
}

<style>
    .detail {
        color: #2ec4b6;
        font-size: 24px;
        letter-spacing: 1px;
        font-weight: bold;
        
    }

    .detail-1 {
        color: #000;
        font-size: 16px;
    }

    .description {
        color: #2ec4b6;
        font-size: 14px;
        letter-spacing: 1px;
    }

    .blog {
        display: inline-block;
        justify-content: space-between;
        height: 35vh;
    }

    .blog-content {
        position: relative;
        display: flex;
        justify-content: space-around;
    }
    .but{
        font-weight:bold;
        background-color:deepskyblue;
        color:black;
        border:2px solid black;
        margin-top:15px;
        font-size:17px;
    }
</style>

<!-- banner -->
<div class="inner_banner_agile">

</div>

<div class="services-breadcrumb">
    <div class="inner_breadcrumb">
        <ul class="short_ls">
            <li>
                <a href="@Url.Action("Index","Home")">Home</a>
                <span>/ /</span>
            </li>
            <li>Read More</li>
        </ul>
    </div>
</div>

<div class="welcome">
    <div class="container">
        <h3 class="title">ABOUT TOUR AND BOOKING</h3>
        @foreach (var data in Model.Take(1))
        {
        <div class="blog">
            <div class="detail">Details</div><br />
            <div class="blog-content">
                <div class="blog-text">
                    <p class="detail-1">
                        @(data.description)
                    </p>

                    <br />

                    <p>
                        <label class="description">Location: </label>
                        @(data.location)
                    </p>

                    <p>
                        <label class="description">Duration: </label>
                        @(data.dtime)
                    </p>

                    <p>
                        <label class="description">Price: </label>
                        @(data.price)
                    </p>

                    <div class="readmore-w3-agileits about-read">
                        @using (Html.BeginForm("destination", "Home", FormMethod.Post))
                        {
                            <input type="text" hidden value="@(data.dname)" name="dname"/>
                            <button type="submit" class="but">Book Tour</button>
                        }
                            @*<a href="@Url.Action("Booktour", "Home")">Book Tour</a>*@
                        </div>
                </div>

                <img src="@Url.Content(data.photo + "/" + data.photo_name)" style="height:280px; width:400px; margin-left: 300px;">

            </div>
        </div>
        }
        <div class="clearfix"> </div>
    </div>
    <div class="clearfix"> </div>
</div>

<div class="trips-section">
    <div class="container">
        <h3 class="title">Our Other Tours</h3>
        @foreach (var data in Model)
        {
            <div class="col-xs-4 exce-grid1-mmstyle">
                <img src="@Url.Content(data.photo + "/" + data.photo_name)">
                <div class="grid-ec1">
                    <h3>@(data.dname)</h3>
                    <p>@(data.description)</p>
                    <h4>
                        <i class="fa fa-map-marker"></i>@(data.location)
                    </h4>
                    <h4 class="w3l-name">
                        <i class="fa fa-calendar"></i>@(data.dtime)
                    </h4>
                    <div class="readmore-w3-agileits about-read">
                        @using (Html.BeginForm("Sort", "Home", FormMethod.Post))
                        {
                            <input type="text" hidden value="@(data.id)" name="name2" />
                            <button type="submit">Read More</button>
                        }
                    </div>
                </div>
            </div>
        }
        <div class="clearfix"></div>
    </div>
</div>