@model List<DMS.DAL.DatabaseContext.destinationn>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "readmore";
}

<style>
    .detail {
        color: #2ec4b6;
        font-size: 24px;
        letter-spacing: 1px;
        font-weight: bold;
        
    }

    .detail-1 {
        color: #000;
        font-size: 16px;
    }

    .description {
        color: #2ec4b6;
        font-size: 14px;
        letter-spacing: 1px;
    }

    .blog {
        display: inline-block;
        justify-content: space-between;
        height: 35vh;
    }

    .blog-content {
        position: relative;
        display: flex;
        justify-content: space-around;
    }

    .btn-style {
        margin-top: 15px;
        border: 0px;
        border-radius: 5px;
        background: #ff9f1c;
        display: inline-block;
        text-decoration: none;
        color: #fff;
        font-size: 15px;
        padding: 12px 20px;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -o-transition: 0.5s all;
    }

        .btn-style:hover {
            color: #fff;
            background: #000;
            transition: 0.5s all;
            -webkit-transition: 0.5s all;
            -moz-transition: 0.5s all;
            -o-transition: 0.5s all;
        }
</style>

<!-- banner -->
<div class="inner_banner_agile">

</div>

<div class="services-breadcrumb">
    <div class="inner_breadcrumb">
        <ul class="short_ls">
            <li>
                <a href="@Url.Action("Index","Home")">Home</a>
                <span>/ /</span>
            </li>
            <li>Read More</li>
        </ul>
    </div>
</div>

<div class="welcome">
    <div class="container">
        <h3 class="title">ABOUT TOUR AND BOOKING</h3>
        @foreach (var data in Model.Take(1))
        {
        <div class="blog">
            <div class="detail">Details</div><br />
            <div class="blog-content">
                <div class="blog-text">
                    <p class="detail-1">
                        @(data.description)
                    </p>

                    <br />

                    <p>
                        <label class="description">Location: </label>
                        @(data.location)
                    </p>

                    <p>
                        <label class="description">Duration: </label>
                        @(data.dtime)
                    </p>

                    <p>
                        <label class="description">Price: </label>
                        @(data.price)
                    </p>

                    <div class="readmore-w3-agileits about-read">
                        @using (Html.BeginForm("destination", "Home", FormMethod.Post))
                        {
                            <input type="text" hidden value="@(data.dname)" name="dname"/>
                            <button type="submit" class="btn-style">Book Tour</button>
                        }
                    </div>
                </div>

                <img src="@Url.Content(data.photo + "/" + data.photo_name)" style="height:280px; width:400px; margin-left: 300px;">

            </div>
        </div>
        }
        <div class="clearfix"> </div>
    </div>
    <div class="clearfix"> </div>
</div>